<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/movie_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_movies_to_db_btn"
        android:layout_width="127dp"
        android:layout_height="90dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="216dp"
        android:width="150dp"
        android:height="150dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/add_movies_to_db_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_for_movies_btn"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="20dp"
        android:width="150dp"
        android:height="150dp"
        android:text="@string/search_for_movies_btn"
        android:backgroundTint="@color/dark_red"
        app:layout_constraintBottom_toTopOf="@+id/search_for_actors_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_for_actors_btn"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="255dp"
        android:width="150dp"
        android:height="150dp"
        android:text="@string/search_for_actors_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_for_movies_btn" />

    <Button
        android:id="@+id/search_movies_in_web_btn"
        android:layout_width="127dp"
        android:layout_height="90dp"
        android:layout_marginStart="216dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="@color/dark_red"
        android:width="150dp"
        android:height="150dp"
        android:text="@string/search_movies_in_web_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>